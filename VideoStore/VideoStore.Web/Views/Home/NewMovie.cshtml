@model VideoStore.Models.Movie
@{
    ViewBag.Title = "New Movie";
}



@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-4 col-md-offset-3">
            <h2 class="text-center">Add new movie</h2>
                @Html.ValidationSummary()
            <div class="form-group">
                @Html.TextBoxFor(model => model.Title, new { placeholder = "Name", @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(model => model.Rating, new { placeholder = "Rating", @Value = "", @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(model => model.ImageUrl, new { placeholder = "Image url", @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.TextAreaFor(model => model.Description, new { placeholder = "Description", @class = "form-control", @rows = "4" })
            </div>
                <div class="form-group">
                    @Html.TextBoxFor(model => model.Year, new { placeholder = "Year", @Value = "", @class = "form-control" })
                </div>
            <div class="form-group">
                @Html.DropDownListFor(model => model.CategoryId, (SelectList)ViewBag.Categories, "Select a category", new { @class = "form-control" })
            </div>
            <div class="btn-group-justified">
                <div class="btn-group ">
                    <input type="submit" value="Save" class="btn btn-lg btn-success" />
                </div>
                <div class="btn-group">
                    @Html.ActionLink("Cancel", "Cancel", null, new { @class = "btn btn-warning btn-lg " })
                </div>
            </div>
        </div>
    </div>

}


